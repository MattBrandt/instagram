<div class="page-header">
  <h1>Add Comment</h1>
</div>

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_comment" class="form-horizontal">
  <!-- Label and input for content -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">
      Content
    </label>
    <div class="col-sm-10">
      <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @comment.content %></textarea>
    </div>
  </div>

  <!-- Label and input for picture_id -->
  <div class="form-group">
    <label for="picture_id" class="col-sm-2 control-label">
      Picture
    </label>
    <div class="col-sm-10">
      <input type="text" id="picture_id" name="picture_id" placeholder="Picture" class="form-control" value="<%= @comment.picture_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Comment" class="btn btn-primary">
    </div>
  </div>
</form>
